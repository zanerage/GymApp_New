<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pozadina"
        tools:context=".Activities.ProfileActivity">

    <android.support.v7.widget.CardView
            android:id="@+id/main_container"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            android:layout_marginTop="22dp"
            app:cardBackgroundColor="@color/pozadina"
            tools:layout_editor_absoluteX="16dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_edt_style">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_picture"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="10dp"
                    app:civ_border_width="1dp"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/android_profile"/>

            <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/name"
                    app:layout_constraintLeft_toRightOf="@+id/profile_picture"
                    android:layout_width="218dp"
                    android:layout_height="37dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textSize="18sp"
                    android:textColor="@android:color/background_dark"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <LinearLayout
            android:id="@+id/first_row"
            app:layout_constraintTop_toBottomOf="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal">

        <android.support.v7.widget.CardView
                android:elevation="10dp"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:background="@drawable/gradzelena"
                app:cardBackgroundColor="@android:color/transparent">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:background="@drawable/gradzelena">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bmi"
                        android:textColor="#5E5E5E"
                        android:textSize="18sp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:text="@string/_180_lbs"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:elevation="10dp"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:background="@drawable/gradzelena"
                app:cardBackgroundColor="@color/pozadina">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:background="@drawable/gradzelena">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fat_percentage_13"
                        android:textColor="#5E5E5E"
                        android:textSize="18sp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:text="9"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
            app:layout_constraintTop_toBottomOf="@+id/first_row"
            android:id="@+id/second_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal">

        <android.support.v7.widget.CardView
                android:elevation="10dp"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:background="@drawable/gradzelena">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weight"
                        android:textColor="#5E5E5E"
                        android:textSize="18sp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:text="@string/_180_lbs"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:elevation="10dp"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:background="@drawable/gradzelena">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Height"
                        android:textColor="#5E5E5E"
                        android:textSize="18sp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:text="@string/_180cm"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
            android:id="@+id/third_row"
            app:layout_constraintTop_toBottomOf="@+id/second_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

        <android.support.v7.widget.CardView
                android:elevation="10dp"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:background="@drawable/gradzelena">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/avg_cals_exp"
                        android:textColor="#5E5E5E"
                        android:textSize="18sp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:text="@string/_1600"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:elevation="10dp"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:background="@drawable/gradzelena">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/avg_cals_exp"
                        android:textColor="#5E5E5E"
                        android:textSize="18sp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:text="1500"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

    <include layout="@layout/bottom_navigation_view"/>


</android.support.constraint.ConstraintLayout>